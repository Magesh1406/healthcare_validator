# PASTE THIS IN .env.production
# Database
DATABASE_URL=postgresql://username:password@postgres-host:5432/database_name
REDIS_URL=redis://:password@redis-host:6379

# API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
GOOGLE_MAPS_API_KEY=your-google-maps-key
NPI_API_KEY=your-npi-api-key

# Application
SECRET_KEY=your-secret-key-change-in-production
ENVIRONMENT=production
DEBUG=False
LOG_LEVEL=INFO

# CORS
ALLOWED_HOSTS=healthcare-provider-validator.vercel.app,*.vercel.app,localhost,127.0.0.1
CORS_ORIGINS=https://healthcare-provider-validator.vercel.app,http://localhost:3000

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@healthcare-provider.com

# File Upload
MAX_UPLOAD_SIZE=104857600  # 100MB
ALLOWED_EXTENSIONS=.csv,.xlsx,.xls,.pdf

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Monitoring
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_PORT=9090

# Frontend
VITE_API_URL=https://api.healthcare-provider.com